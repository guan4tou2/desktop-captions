{
  "name": "danmu-desktop",
  "version": "1.0.0",
  "description": "A desktop Captions",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "pack-dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guan4tou2/desktop-captions.git"
  },
  "keywords": [
    "Electron",
    "quick",
    "start"
  ],
  "author": "guan4tou2",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "bootstrap": "^5.3.0-alpha2",
    "jquery": "^3.6.4"
  },
  "build": {
    "appId": "com.example.app",
    "productName": "desktop Captions",
    "directories": {
      "output": "pack"
    },
    "files": [
      "**/*",
      "!.vscode",
      "!.github",
      "!**/node_modules/**/*"
    ],
    "asar": false,
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.png"
    },
    "mac": {
      "icon": "assets/icon.png"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  },
  "bugs": {
    "url": "https://github.com/guan4tou2/desktop-captions/issues"
  },
  "homepage": "https://github.com/guan4tou2/desktop-captions#readme"
}
